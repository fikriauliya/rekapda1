%td.right-aligned
  -if db1
    = number_with_delimiter(db1.sum_prabowo_count, delimiter: ",")
    %br
    %span{"style" => yellow_background_for_max(db1.sum_prabowo_count, db1.sum_jokowi_count)}
      = (db1.sum_prabowo_count * 100 / ((db1.sum_prabowo_count + db1.sum_jokowi_count) * 1.0)).round(2)
      \%
